<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">
    <ui:ElementTheme x:Key="BoardTheme">Light</ui:ElementTheme>
    <SolidColorBrush x:Key="BoardBarBackground" Opacity="0.75" Color="White" />
    <SolidColorBrush x:Key="BoardBarTitleBackground" Opacity="0.25" Color="#FF7E00" />
    <SolidColorBrush x:Key="BoardBarBorderBrush" Opacity="0.8" Color="Black" />
    <SolidColorBrush x:Key="BoardBarForeground" Color="Black" />
    <Color x:Key="BoardBarForegroundColor">#FF666666</Color>

    <Color x:Key="BoardBarButtonBackgroundKey">Transparent</Color>
    <Color x:Key="BoardBarButtonBackgroundPointerOverKey">#66FFD700</Color>
    <Color x:Key="BoardBarButtonButtonBackgroundPressedKey">#88FFC800</Color>
</ResourceDictionary>