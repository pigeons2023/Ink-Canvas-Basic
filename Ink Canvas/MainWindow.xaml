<Window
    x:Class="Ink_Canvas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:Ink_Canvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Name="window"
    Title="Ink Canvas Basic 画板"
    Width="1440"
    Height="5500"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    Closing="Window_Closing"
    Foreground="Black"
    KeyDown="Window_KeyDown"
    Loaded="Window_Loaded"
    MouseWheel="Window_MouseWheel"
    PreviewKeyDown="Main_Grid_PreviewKeyDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Stylus.IsPressAndHoldEnabled="False"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--  资源中添加命令  -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/BoardDrawShapeImageDictionary.xaml" />
                <ResourceDictionary Source="/Resources/DrawShapeImageDictionary.xaml" />
                <ResourceDictionary Source="/Resources/IconImageDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <RoutedUICommand x:Key="HotKey_Command_Undo" Text=" " />
            <RoutedUICommand x:Key="HotKey_Command_Redo" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToSelect" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToEraser" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen1" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen2" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen3" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen4" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen5" Text=" " />
            <RoutedUICommand x:Key="HotKey_DrawLine" Text=" " />
        </ResourceDictionary>
    </Window.Resources>
    <!--  输入命令绑定  -->
    <Window.InputBindings>
        <KeyBinding
            Key="Z"
            Command="{StaticResource HotKey_Command_Undo}"
            Modifiers="Control" />
        <KeyBinding
            Key="Y"
            Command="{StaticResource HotKey_Command_Redo}"
            Modifiers="Control" />
        <KeyBinding
            Key="S"
            Command="{StaticResource HotKey_ChangeToSelect}"
            Modifiers="Alt" />
        <KeyBinding
            Key="E"
            Command="{StaticResource HotKey_ChangeToEraser}"
            Modifiers="Alt" />
        <KeyBinding
            Key="D1"
            Command="{StaticResource HotKey_ChangeToPen1}"
            Modifiers="Alt" />
        <KeyBinding
            Key="D2"
            Command="{StaticResource HotKey_ChangeToPen2}"
            Modifiers="Alt" />
        <KeyBinding
            Key="D3"
            Command="{StaticResource HotKey_ChangeToPen3}"
            Modifiers="Alt" />
        <KeyBinding
            Key="D4"
            Command="{StaticResource HotKey_ChangeToPen4}"
            Modifiers="Alt" />
        <KeyBinding
            Key="D5"
            Command="{StaticResource HotKey_ChangeToPen5}"
            Modifiers="Alt" />
        <KeyBinding
            Key="L"
            Command="{StaticResource HotKey_DrawLine}"
            Modifiers="Alt" />
    </Window.InputBindings>
    <!--  命令执行方法绑定  -->
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="CommandBinding_CanExecute"
            Command="{StaticResource HotKey_Command_Undo}"
            Executed="HotKey_Undo" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute"
            Command="{StaticResource HotKey_Command_Redo}"
            Executed="HotKey_Redo" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute"
            Command="{StaticResource HotKey_ChangeToSelect}"
            Executed="KeyChangeToSelect" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute"
            Command="{StaticResource HotKey_ChangeToEraser}"
            Executed="KeyChangeToEraser" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute"
            Command="{StaticResource HotKey_DrawLine}"
            Executed="KeyDrawLine" />
    </Window.CommandBindings>
    <Grid x:Name="Main_Grid" Background="#01FFFFFF">
        <!--  // 画板幕布 //  -->
        <Grid Name="GridBackgroundCoverHolder">
            <Grid
                Name="GridBackgroundCover"
                Background="#1F1F1F"
                Visibility="Collapsed" />
        </Grid>
        <!--  // 画板 //  -->
        <InkCanvas
            x:Name="inkCanvas"
            Background="Transparent"
            Cursor="Pen"
            EditingModeChanged="inkCanvas_EditingModeChanged"
            ForceCursor="False"
            IsManipulationEnabled="True"
            ManipulationCompleted="Main_Grid_ManipulationCompleted"
            ManipulationDelta="Main_Grid_ManipulationDelta"
            ManipulationInertiaStarting="inkCanvas_ManipulationInertiaStarting"
            ManipulationStarting="inkCanvas_ManipulationStarting"
            MouseDown="inkCanvas_MouseDown"
            MouseMove="inkCanvas_MouseMove"
            MouseUp="inkCanvas_MouseUp"
            PreviewTouchDown="inkCanvas_PreviewTouchDown"
            PreviewTouchUp="inkCanvas_PreviewTouchUp"
            SelectionChanged="inkCanvas_SelectionChanged"
            StrokeCollected="inkCanvas_StrokeCollected"
            TouchDown="Main_Grid_TouchDown"
            TouchMove="inkCanvas_TouchMove"
            TouchUp="Main_Grid_TouchUp" />
        <!--  // 选择选项窗口 //  -->
        <Grid Visibility="{Binding ElementName=inkCanvas, Path=Visibility}">
            <Grid
                Name="GridInkCanvasSelectionCover"
                Background="#01FFFFFF"
                IsManipulationEnabled="True"
                ManipulationCompleted="GridInkCanvasSelectionCover_ManipulationCompleted"
                ManipulationDelta="GridInkCanvasSelectionCover_ManipulationDelta"
                ManipulationStarting="GridInkCanvasSelectionCover_ManipulationStarting"
                MouseDown="GridInkCanvasSelectionCover_MouseDown"
                MouseMove="GridInkCanvasSelectionCover_MouseMove"
                MouseUp="GridInkCanvasSelectionCover_MouseUp"
                MouseWheel="GridInkCanvasSelectionCover_MouseWheel"
                Opacity="0.01"
                PreviewTouchDown="GridInkCanvasSelectionCover_PreviewTouchDown"
                PreviewTouchUp="GridInkCanvasSelectionCover_PreviewTouchUp"
                Visibility="Visible" />
            <Border
                x:Name="BorderStrokeSelectionControl"
                Height="104"
                Margin="0,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{DynamicResource FloatBarBackground}"
                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="{Binding ElementName=GridInkCanvasSelectionCover, Path=Visibility}">
                <Viewbox>
                    <ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel
                            Height="80"
                            Orientation="Horizontal"
                            Spacing="6">
                            <ikw:SimpleStackPanel
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Spacing="2">
                                <Border CornerRadius="5">
                                    <ToggleButton
                                        x:Name="ToggleButtonStrokeSelectionClone"
                                        Width="90"
                                        Height="35"
                                        Padding="0"
                                        Background="{DynamicResource FloatBarBackground}"
                                        Checked="BorderStrokeSelectionClone_Click"
                                        IsChecked="False"
                                        Unchecked="BorderStrokeSelectionClone_Click">
                                        <ikw:SimpleStackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="2">
                                            <ui:FontIcon
                                                x:Name="IconStrokeSelectionClone"
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe8c8;" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{Binding ElementName=IconStrokeSelectionClone, Path=Foreground}"
                                                Text="克隆模式" />
                                        </ikw:SimpleStackPanel>
                                    </ToggleButton>
                                </Border>
                                <Button
                                    Width="90"
                                    Height="35"
                                    Padding="0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    Click="BorderStrokeSelectionCloneToBoardOrNewPage_Click">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="2">
                                        <ui:FontIcon
                                            Width="18"
                                            Height="18"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="16"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Glyph="&#xf413;" />
                                        <TextBlock
                                            x:Name="TextSelectionCloneToNewBoard"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="衍至画板" />
                                    </ikw:SimpleStackPanel>
                                </Button>
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel VerticalAlignment="Center" Spacing="4">
                                <Border
                                    Height="33"
                                    Padding="5,0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    CornerRadius="3">
                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="1.5">
                                        <ui:FontIcon
                                            Width="18"
                                            Height="18"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Glyph="&#xe7ad;">
                                            <ui:FontIcon.RenderTransformOrigin>
                                                <Point X="0.5" Y="0.5" />
                                            </ui:FontIcon.RenderTransformOrigin>
                                            <ui:FontIcon.RenderTransform>
                                                <TransformGroup>
                                                    <RotateTransform Angle="90" />
                                                    <ScaleTransform ScaleX="1" ScaleY="-1" />
                                                </TransformGroup>
                                            </ui:FontIcon.RenderTransform>
                                        </ui:FontIcon>
                                        <TextBlock
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="逆旋" />
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnAnticlockwiseRotate15_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="15°" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnAnticlockwiseRotate45_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="45°" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnAnticlockwiseRotate90_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="90°" />
                                        </Button>
                                    </ikw:SimpleStackPanel>
                                </Border>
                                <Border
                                    Height="33"
                                    Padding="5,0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    CornerRadius="3">
                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="1.5">
                                        <ui:FontIcon
                                            Width="18"
                                            Height="18"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Glyph="&#xe7ad;">
                                            <ui:FontIcon.RenderTransformOrigin>
                                                <Point X="0.5" Y="0.5" />
                                            </ui:FontIcon.RenderTransformOrigin>
                                            <ui:FontIcon.RenderTransform>
                                                <RotateTransform Angle="-90" />
                                            </ui:FontIcon.RenderTransform>
                                        </ui:FontIcon>
                                        <TextBlock
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="顺旋" />
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnClockwiseRotate15_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="15°" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnClockwiseRotate45_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="45°" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnClockwiseRotate90_Click">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="90°" />
                                        </Button>
                                    </ikw:SimpleStackPanel>
                                </Border>
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel VerticalAlignment="Center" Spacing="2">
                                <Button
                                    Width="90"
                                    Height="35"
                                    Padding="0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    Click="BtnFlipHorizontal_Click">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="2">
                                        <ikw:SimpleStackPanel
                                            Width="18"
                                            Height="18"
                                            Orientation="Vertical">
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe71a;" />
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                Margin="0,-18,-1,0"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xf464;" />
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                Margin="0,-17,0,0"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="12"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe80c;">
                                                <ui:FontIcon.RenderTransformOrigin>
                                                    <Point X="0.5" Y="0.5" />
                                                </ui:FontIcon.RenderTransformOrigin>
                                                <ui:FontIcon.RenderTransform>
                                                    <TransformGroup>
                                                        <RotateTransform Angle="90" />
                                                        <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                    </TransformGroup>
                                                </ui:FontIcon.RenderTransform>
                                            </ui:FontIcon>
                                        </ikw:SimpleStackPanel>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="水平翻转" />
                                    </ikw:SimpleStackPanel>
                                </Button>
                                <Button
                                    Width="90"
                                    Height="35"
                                    Padding="0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    Click="BtnFlipVertical_Click">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="2">
                                        <ikw:SimpleStackPanel
                                            Width="18"
                                            Height="18"
                                            Orientation="Vertical">
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe71a;" />
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                Margin="0,-19,0,0"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xf464;">
                                                <ui:FontIcon.RenderTransformOrigin>
                                                    <Point X="0.5" Y="0.5" />
                                                </ui:FontIcon.RenderTransformOrigin>
                                                <ui:FontIcon.RenderTransform>
                                                    <TransformGroup>
                                                        <RotateTransform Angle="90" />
                                                        <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                    </TransformGroup>
                                                </ui:FontIcon.RenderTransform>
                                            </ui:FontIcon>
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                Margin="0,-18,0,0"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="12"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe80c;" />
                                        </ikw:SimpleStackPanel>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="竖直翻转" />
                                    </ikw:SimpleStackPanel>
                                </Button>
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                Spacing="4">
                                <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="4">
                                    <Border
                                        Width="155"
                                        Height="33"
                                        Padding="5,0"
                                        HorizontalAlignment="Left"
                                        Background="{DynamicResource FloatBarBackground}"
                                        CornerRadius="3">
                                        <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="1.5">
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe70f;" />
                                            <TextBlock
                                                Margin="0,0,2,0"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="粗细" />
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Padding="0"
                                                Background="{DynamicResource FloatBarBackground}"
                                                Click="GridPenWidthIncrease_Click">
                                                <ui:FontIcon
                                                    Width="18"
                                                    Height="18"
                                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource FloatBarForeground}"
                                                    Glyph="&#xe948;" />
                                            </Button>
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Padding="0"
                                                Background="{DynamicResource FloatBarBackground}"
                                                Click="GridPenWidthDecrease_Click">
                                                <ui:FontIcon
                                                    Width="18"
                                                    Height="18"
                                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource FloatBarForeground}"
                                                    Glyph="&#xe949;" />
                                            </Button>
                                            <Button
                                                Width="30"
                                                Height="30"
                                                Padding="0"
                                                Background="{DynamicResource FloatBarBackground}"
                                                Click="GridPenWidthRestore_Click">
                                                <ui:FontIcon
                                                    Width="18"
                                                    Height="18"
                                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                                    FontSize="12"
                                                    Foreground="{DynamicResource FloatBarForeground}"
                                                    Glyph="&#xe72c;" />
                                            </Button>
                                        </ikw:SimpleStackPanel>
                                    </Border>
                                    <Button
                                        Width="90"
                                        Height="35"
                                        Padding="0"
                                        Background="{DynamicResource FloatBarBackground}"
                                        Click="BtnStrokeSelectionSaveToImage_Click">
                                        <ikw:SimpleStackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="2">
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe91b;" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="存为图片" />
                                        </ikw:SimpleStackPanel>
                                    </Button>
                                    <Button
                                        Width="90"
                                        Height="35"
                                        Padding="0"
                                        Background="{DynamicResource FloatBarBackground}"
                                        Click="BorderStrokeSelectionDelete_Click">
                                        <ikw:SimpleStackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal"
                                            Spacing="2">
                                            <ui:FontIcon
                                                Width="18"
                                                Height="18"
                                                FontFamily="{StaticResource FluentIconFontFamily}"
                                                FontSize="16"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Glyph="&#xe74d;" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{DynamicResource FloatBarForeground}"
                                                Text="删除" />
                                        </ikw:SimpleStackPanel>
                                    </Button>
                                </ikw:SimpleStackPanel>
                                <Border
                                    Height="33"
                                    Padding="5,0"
                                    Background="{DynamicResource FloatBarBackground}"
                                    CornerRadius="3">
                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="1.5">
                                        <ui:FontIcon
                                            Width="18"
                                            Height="18"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Glyph="&#xe790;" />
                                        <TextBlock
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="颜色" />
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorBlack_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="Black"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorWhite_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="White"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorRed_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#dc2626"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorOrange_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#ea580c"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorYellow_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#eab308"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorGreen_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#16a34a"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorTeal_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#0d9488"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorBlue_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="#2563eb"
                                                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                                                BorderThickness="1.5"
                                                CornerRadius="100" />
                                        </Button>
                                        <Button
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            Background="{DynamicResource FloatBarBackground}"
                                            Click="BtnColorPink_Click">
                                            <Border
                                                Width="16"
                                                Height="16"
